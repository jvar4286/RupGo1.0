<% if signed_in? && current_user.is_admin? %>
<div class="centerforms">

<h1>Regions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<% else %>
          <div class="nothing"></div>
<% end %>
