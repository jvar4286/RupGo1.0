<%= simple_form_for(@deal) do |f| %>

<% if deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul>
      <% deal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
 <% end %>

  <div class="field">
    <%= f.label :place %>
    <%= f.text_area :place%>
  </div>

  <div class="field">
    <%= f.input :description, as: :summernote %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price, step: "any" %>
  </div>

  <div class="field">
    Fotos: <%= f.file_field :pic %>
  </div>
  
  <div class="field">
    <%= f.label :destination_id %>
  </div>

  <div class="field">
    <%= collection_select( :deal, :destination_id, Destination.all, :id, :place, {}, {:multiple => false } )%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
