

  <div class="col-sm-6 col-md-4 col-lg-3">
    <div class="thumbnail">
          
         
        <%= link_to deal do %>
   <%= image_tag deal.pic.url() %>
<% end %>
          
          
            
        
          
      
     
      <div class="caption">
        <h3><%= link_to deal.place, deal %></h3>
        <p>
          <%=truncate(deal.details,length:90) %>
        </p>
        <div class="btn-group">
                
            <button type="button" class="btn btn-success"><%= link_to 'Apply Now', deal %></button>
            <% if signed_in? && current_user.is_admin? %>
            <button type="button" class="btn btn-primary"><%= deal.destination_id %></button>
            <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_deal_path(deal) %></button>
            <button type="button" class="btn btn-danger"><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          
               <% else %>
          <div class="nothing"></div>
            <% end %>
        </div>
      </div>
    </div>
  </div>

 



