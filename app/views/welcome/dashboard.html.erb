 <p id="notice"><%= notice %></p>

<h1>Destinations</h1>

<table>
  <thead>
    <tr>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <% @destinations.each do |destination| %>
 
      <tr>
        <td><%= link_to destination.place, destination %></td>
        
        <td><%= link_to 'Show', destination %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
        <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% if destination.may_publish? %>
        <td><%= link_to 'Publicar', "/destinations/#{destination.id}/publish", method: :put, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>

</tbody>
</table>

<br>
<%= link_to 'New Destination', new_destination_path %>